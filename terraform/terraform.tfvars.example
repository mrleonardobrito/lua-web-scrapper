
# Obrigatório: nome do Key Pair existente na AWS (para SSH)
key_name = "seu-keypair"

# Opcionais (defaults em variables.tf)
aws_region           = "sa-east-1"
instance_type        = "t3.micro"
root_volume_size_gb  = 30
resource_name_prefix = "lua-web-scrapper"

# Recomenda-se restringir SSH ao seu IP público (ex.: "203.0.113.10/32")
allowed_ssh_cidr_blocks   = ["0.0.0.0/0"]
allowed_http_cidr_blocks  = ["0.0.0.0/0"]
allowed_https_cidr_blocks = ["0.0.0.0/0"]

# Tags extras (opcional)
tags = {
  env     = "prod"
  project = "lua-web-scrapper"
}


